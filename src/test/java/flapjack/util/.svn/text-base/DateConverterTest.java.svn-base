package commonline.core.util;

import junit.framework.TestCase;

import java.text.DateFormat;
import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Date;

import commonline.core.util.DateConverter;


public class DateConverterTest extends TestCase {
    private DateConverter converter;

    public void setUp() {
        converter = new DateConverter();
    }

    public void test_convertTo() {
        assertEquals("07498", converter.convertTo(createDate("03/15/1998")));
    }

    public void test_convertFrom() {
        assertEquals(createDate("03/15/1998"), converter.convertFrom("07498"));
    }

    private Date createDate(String formattedDate) {
        DateFormat formatter = new SimpleDateFormat("MM/dd/yy");
        try {
            return formatter.parse(formattedDate);
        } catch (ParseException e) {
            throw new RuntimeException(e);
        }
    }
}
