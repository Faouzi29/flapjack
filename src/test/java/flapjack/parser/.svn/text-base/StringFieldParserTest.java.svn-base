package commonline.core.parser;

import junit.framework.TestCase;
import commonline.core.parser.StringFieldParser;
import commonline.core.layout.FillerFieldDefinition;


public class StringFieldParserTest extends TestCase {

    public void test_parse() {
        StringFieldParser parser = new StringFieldParser();
        assertEquals("@1", parser.parse("@132", new FillerFieldDefinition(0, 2)));
    }
    
    public void test_parse_DoNotTrim() {
        StringFieldParser parser = new StringFieldParser();
        assertEquals("32 ", parser.parse("@132  ", new FillerFieldDefinition(2, 3), false));
    }

    public void test_parse_Trim() {
        StringFieldParser parser = new StringFieldParser();
        assertEquals("32", parser.parse("@132  ", new FillerFieldDefinition(2, 3), true));
    }
}
