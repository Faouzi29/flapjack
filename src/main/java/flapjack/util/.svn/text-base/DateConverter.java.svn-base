package commonline.core.util;

import java.text.SimpleDateFormat;
import java.text.ParseException;
import java.util.Calendar;
import java.util.Date;


public class DateConverter {
    private SimpleDateFormat dateFormat = new SimpleDateFormat("DDDyy");

    public String convertTo(Date date) {
        return dateFormat.format(date);
    }

    public Date convertFrom(String compressedDate) {
        try {
            return dateFormat.parse(compressedDate);
        } catch (ParseException e) {
            throw new RuntimeException(e);
        }
    }

}
